{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Community URLs Schema",
  "description": "Schema for community presence URLs",
  "type": "object",
  "properties": {
    "linkedin": {
      "type": ["string", "null"],
      "format": "uri",
      "pattern": "^https://www\\.linkedin\\.com/company/",
      "description": "LinkedIn company page URL"
    },
    "twitter": {
      "type": ["string", "null"],
      "format": "uri",
      "pattern": "^https://x\\.com/",
      "description": "Twitter/X profile URL"
    },
    "github": {
      "type": ["string", "null"],
      "format": "uri",
      "pattern": "^https://github\\.com/",
      "description": "GitHub organization URL"
    },
    "youtube": {
      "type": ["string", "null"],
      "format": "uri",
      "pattern": "^https://www\\.youtube\\.com/@",
      "description": "YouTube channel URL"
    },
    "discord": {
      "type": ["string", "null"],
      "format": "uri",
      "pattern": "^https://",
      "description": "Discord server URL"
    },
    "reddit": {
      "type": ["string", "null"],
      "format": "uri",
      "pattern": "^https://www\\.reddit\\.com/r/",
      "description": "Reddit community URL"
    },
    "blog": {
      "type": ["string", "null"],
      "format": "uri",
      "pattern": "^https://",
      "description": "Official blog URL"
    }
  },
  "required": ["linkedin", "twitter", "github", "youtube", "discord", "reddit", "blog"],
  "additionalProperties": false
}
